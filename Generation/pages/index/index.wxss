.generate_content {
  padding: 30px;
}

.fixed {
  position: fixed;
  top: 0;
  left: 0;
}

.generate_content_blur {
  filter: progid:DXImageTransform.Microsoft.Blur(PixelRadius=4, MakeShadow=false);
  filter: blur(6px);
}

.image_content {
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #eeeeee;
  border-radius: 2px;
  background-color: white;
  margin-bottom: 16px;
}

.image_add {
  width: 60%;
}

.image_choose {
  width: 100%;
  height: 100%;
}

.label {
  font-size: 14px;
  color: #555555;
  padding-right: 16px;
}

.choices {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 18px 10px 18px;
}

.choices_text, .switch_text {
  font-size: 12px;
  color: #999999;
}

.input_content {
  margin-top: 22px;
  background-color: white;
  border-radius: 2px;
  border: 1px solid #eeeeee;
  padding: 6px 10px;
}

.input {
  font-size: 16px;
  color: #2e2e2e;
}

.text_adding_content {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 6px 0 0 0;
}

.text_ps {
  color: #999999;
  font-size: 12px;
}

.image_text_op {
  width: 26px;
  height: 26px;
  margin-right: 6px;
}

.positive_button {
  margin-top: 30px;
  background-color: #12B9C9;
  color: white;
}

.generated_content {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 30px;
}

.generated_image {
  margin: 30px 0;
  background-color: white;
}

.negative_button {
  margin-top: 30px;
}
