.generate_content {
  padding: 30px;
}

.fixed {
  position: fixed;
  top: 0;
  left: 0;
}

.generate_content_blur {
  filter: progid:DXImageTransform.Microsoft.Blur(PixelRadius=4, MakeShadow=false);
  filter: blur(6px);
}

.image_content {
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #eeeeee;
  border-radius: 2px;
  background-color: white;
  margin-bottom: 16px;
}

.image_add {
  width: 60%;
}

.image_choose {
  width: 100%;
  height: 100%;
}

.label {
  font-size: 14px;
  color: #555555;
  padding-right: 16px;
}

.choices {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 18px 10px 18px;
}

.choices_text, .switch_text {
  font-size: 12px;
  color: #999999;
}

.input_content {
  margin-top: 22px;
  background-color: white;
  border-radius: 2px;
  border: 1px solid #eeeeee;
  padding: 6px 10px;
}

.input {
  font-size: 16px;
  color: #2e2e2e;
}

.text_adding_content {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 6px 0 0 0;
}

.text_ps {
  color: #999999;
  font-size: 12px;
}

.image_text_op {
  width: 26px;
  height: 26px;
  margin-right: 6px;
}

.positive_button {
  margin-top: 30px;
  background-color: #12B9C9;
  color: white;
}

.generated_content {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 30px;
}

.generated_image {
  margin: 30px 0;
  background-color: white;
}

.negative_button {
  margin-top: 30px;
}

.push_back {
  position: fixed;
  top: 0;
  right: 0;
  height: 100%;
  width: 100%;
  background: linear-gradient(to right, rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.2));
}

.push_semi_circle {
  margin-top: 20px;
  left: 0;
  border-radius: 50% 0 0 50%;
  background-color: rgba(255, 255, 255, 0.8);
  height: 8%;
  width: 18%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.push_semi_circle_icon {
  height: 80%;
  width: 80%;
}

@keyframes slideInRight {
  from {
    transform: translate3d(87%, 0, 0);
    visibility: visible;
  }

  to {
    transform: translate3d(0, 0, 0);
  }
}

.slideInRight {
  position: fixed;
  top: 0;
  right: 0;
  height: 100%;
  width: 80%;
  animation-duration: 1s;
  animation-name: slideInRight;
  display: flex;
  animation-fill-mode: both;
}

@keyframes slideOutRight {
  from {
    transform: translate3d(0, 0, 0);
  }

  to {
    transform: translate3d(87%, 0, 0);
    visibility: visible;
  }
}

.slideOutRight {
  animation-duration: 0.5s;
  animation-name: slideOutRight;
  position: fixed;
  top: 0;
  right: 0;
  height: 100%;
  width: 80%;
  display: flex;
  animation-fill-mode: both;
}

.slide_null {
  position: fixed;
  top: 0;
  left: 88%;
  height: 100%;
  width: 80%;
  display: flex;
}

.push_right {
  background-color: rgba(255, 255, 255, 0.8);
  width: 100%;
}

.push_right_content {
  margin: 0 8% 6% 8%;
  padding: 6% 0;
}

.push_right_image {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 100%;
  margin-top: 4px;
}

.push_right_image_item {
  background-color: white;
  width: 60px;
  height: 60px;
  margin: 2% 0;
}

.push_right_button {
  margin-top: 20px;
  background-color: #12B9C9;
  padding: 4px 0;
  border-radius: 4px;
  text-align: center;
}

.push_right_button_text {
  color: white;
  font-size: 16px;
}

.push_right_default {
  height: 400px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.perspective_down {
  animation-name: perspectiveDown;
  animation-fill-mode: both;
  box-shadow: 0px 8px 20px #dddddd;
  background-color: white;
  padding: 6px 10px;
  border-radius: 4px;
  animation-duration: 3s;
  animation-delay: 0.5s;
}

@keyframes perspectiveDown {
  0% {
    transform-origin: 100% 0;
    transform: perspective(800px) rotateX(180deg);
  }

  20% {
    transform-origin: 100% 0;
    transform: perspective(800px) rotateX(0deg);
    animation-timing-function: ease;
  }

  30% {
    transform-origin: 100% 0;
    transform: perspective(800px) rotateX(20deg);
    animation-timing-function: linear;
  }

  40% {
    transform-origin: 100% 0;
    transform: perspective(800px) rotateX(0deg);
    animation-timing-function: linear;
  }

  50% {
    transform-origin: 100% 0;
    transform: perspective(800px) rotateX(10deg);
    animation-timing-function: linear;
  }

  60% {
    transform-origin: 100% 0;
    transform: perspective(800px) rotateX(0deg);
    animation-timing-function: linear;
  }

  70% {
    transform-origin: 100% 0;
    transform: perspective(800px) rotateX(6deg);
    animation-timing-function: linear;
  }

  80% {
    transform-origin: 100% 0;
    transform: perspective(800px) rotateX(0deg);
    animation-timing-function: ease-in-out;
  }

  90% {
    transform-origin: 100% 0;
    transform: perspective(800px) rotateX(2deg);
    animation-timing-function: linear;
  }

  100% {
    transform-origin: 100% 0;
    transform: perspective(800px) rotateX(0deg);
    animation-timing-function: linear;
  }
}

.perspective_down_text {
  font-size: 16px;
  color: #333333;
}
