.mine_content {
  background-color: #f6f8fa;
}

.mine_user {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 14rem;
}

.mine_user_avatar {
  /* border-radius: 50%; */
  background-color: #c7c7c7;
  height: 5rem;
  width: 5rem;
}

.mine_user_name {
  padding-top: 0.6rem;
  font-size: 1rem;
}

.mine_label {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: white;
  padding: 0.9rem 1rem;
  margin: 0 1.6rem;
  border-bottom: 1px solid #f1f5f6;
}

.mine_label_left {
  display: flex;
  align-items: center;
}

.mine_label_title {
  font-size: 1rem;
}

.mine_label_next_icon {
  height: 1rem;
  width: 1rem;
}
